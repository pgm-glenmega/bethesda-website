# ---- Required ----
SECURITY_KEY=
PRIMARY_SITE_URL="https://bethesda-ministry.eu"
CP_TRIGGER=admin

# ---- Environment flags ----
DEV_MODE=false
ALLOW_ADMIN_CHANGES=false
DISALLOW_ROBOTS=false
ENABLE_CSRF=true

# ---- Database (used for LOCAL DEV; Craft Cloud injects DB automatically) ----
DB_DRIVER=mysql
# If using DDEV for local dev, use: DB_SERVER=db
# If running MySQL locally w/out DDEV, use: DB_SERVER=127.0.0.1
DB_SERVER=
DB_PORT=3306
DB_DATABASE=
DB_USER=
DB_PASSWORD=
DB_SCHEMA=            # leave empty for MySQL; schema is Postgres-only
DB_TABLE_PREFIX=

# ---- Aliases for assets (optional, but common) ----
ASSET_BASE_PATH=@webroot/assets
ASSET_BASE_URL=@web/assets

MAILER_DSN=

# B) Provider API (recommended for prod reliability)
SENDGRID_API_KEY=
POSTMARK_TOKEN=
MAILGUN_DOMAIN=
MAILGUN_API_KEY=

SYSTEM_EMAIL="glen.meganck@gmail.com"
SYSTEM_NAME="Bethesda Ministry"

# ---- Site-specific (if you reference them in config/templates) ----
BETHESDA_MINISTRY_NL_URL="https://bethesda-ministry.eu/nl"
BETHESDA_MINISTRY_FR_URL="https://bethesda-ministry.eu/fr"

# ---- Stripe (placeholders ONLY; set TEST in dev, LIVE in prod) ----
STRIPE_SECRET_KEY_TEST=
STRIPE_PUBLISHABLE_KEY_TEST=
STRIPE_PRICE_MEMBERSHIP_YEARLY=
