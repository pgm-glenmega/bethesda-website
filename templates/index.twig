{% extends '_layout.twig' %}

{% block title %}Welcome to Bethesda Ministry{% endblock %}

{% block content %}
    <h1>Welcome to Bethesda Ministry</h1>

    <section>
        <h2>Latest Articles</h2>
        {% for article in craft.entries.section('articles').limit(3).all() %}
            <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
        {% endfor %}
    </section>

    <section>
        <h2>Upcoming Events</h2>
        {% for event in craft.entries.section('events').limit(3).all() %}
            <h3><a href="{{ event.url }}">{{ event.title }}</a></h3>
        {% endfor %}
    </section>

    <section>
        <h2>Latest Sermons</h2>
        {% for sermon in craft.entries.section('sermons').limit(3).all() %}
            <h3><a href="{{ sermon.url }}">{{ sermon.title }}</a></h3>
        {% endfor %}
    </section>

{% endblock %}

